<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
    <%= User.find(1).email %>
    <%= User.find(post.user_id).email %>
    <%= @current_user %>
  </p>

</div>
